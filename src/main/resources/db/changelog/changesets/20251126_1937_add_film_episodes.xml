<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251126_1937_add_film_episodes" author="Mykola Prybysh">
        <sql>
            CREATE TYPE film_episode_status AS ENUM ('BEING_RENDERED', 'RENDERED', 'RENDERING_FAILED');
        </sql>

        <createTable tableName="film_episodes">
            <column name="id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="pk_film_episodes"/>
            </column>
            <column name="film_dubbing_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_film_episodes_on_film_dubbings"
                             referencedTableName="film_dubbings" referencedColumnNames="id"
                />
            </column>
            <column name="watch_order" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(250)"/>
            <column name="status" type="film_episode_status">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="film_episodes" columnNames="film_dubbing_id, watch_order"
                             constraintName="ak_film_episodes_film_dubbing_id_watch_order"/>
    </changeSet>

</databaseChangeLog>