<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250920_0109_add_users" author="Mykola Prybysh">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="type" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(64)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ak_users_username"/>
            </column>
            <column name="password_hash" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="about" type="varchar(5000)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>