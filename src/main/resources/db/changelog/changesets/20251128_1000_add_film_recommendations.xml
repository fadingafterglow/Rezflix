<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251128_1000_add_film_recommendations" author="Stas Kulakevych">
        <createTable tableName="film_recommendations">
            <column name="user_id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_film_recommendations"
                             referencedTableName="users" referencedColumnNames="id"
                             foreignKeyName="fk_film_recommendations_on_users"
                             deleteCascade="true"/>
            </column>
            <column name="film_id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_film_recommendations"
                             referencedTableName="films" referencedColumnNames="id"
                             foreignKeyName="fk_film_recommendations_on_films"
                             deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>